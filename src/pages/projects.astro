---
import ProjectsGrid from "@components/ProjectsGrid.astro";
import Layout from "@layout/Layout.astro";

const projects = [
  {
    name: "OBS Scoreboard",
    description:
      "Outputs a JSON file to display information on the scoreboard. Skills used: HTML, CSS & JavaScript.",
      link: "https://github.com/mx3th/obs-scoreboard",
  },
  {
    name: "Rocket Jump",
    description:
      "A physics based platforming game about landing rocket ships. Skills used: Godot Engine, GDScript.",
    link: "https://mx3th.itch.io/rocket-jump?secret=aSep2EUzt2s8lXdyIX1iesvYAew",
  },
  {
    name: "Personal Website",
    description:
      "View the source code for the website you're viewing now. Skills used: HTML, CSS, JavaScript, Astro.",
    link: "https://github.com/mx3th/mx3th.vercel",
  },
  {
    name: "Awesome Config",
    description:
      "My configuration for the Awesome Window Manager. Skills used: Lua.",
    link: "https://github.com/mx3th/dots",
  },
];
---

<Layout
  pageTitle="Projects"
  description="Various projects I've been working on"
  type="content"
>
  <main class="px-8 pt-16 mx-auto max-w-6xl sm:pt-24 lg:px-16">
    <div class="flex flex-col mt-4 space-y-8">
      <div class="flex flex-col space-y-4">
        <h1
          class="text-4xl font-bold tracking-tighter sm:text-5xl max-w-[25ch]"
        >
          What I've been working on
        </h1>
        <p class="text-primary-300 max-w-[65ch]">
          I've worked on various kinds of projects from websites to games and more, you'll find many of them listed here.
        </p>
      </div>
      <ProjectsGrid projects={projects} />
    </div>
  </main>
</Layout>
